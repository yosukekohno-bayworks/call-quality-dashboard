# ===========================================
# Terraform Variables Example
# ===========================================
# このファイルを terraform.tfvars にコピーして使用してください
# cp terraform.tfvars.example terraform.tfvars

project_id = "your-gcp-project-id"
region     = "asia-northeast1"

# Database
database_tier     = "db-f1-micro"  # 本番: db-custom-2-4096
database_password = "your-secure-database-password"

# Redis
redis_tier = "BASIC"  # 本番: STANDARD_HA

# Container Images (GitHub Actions でビルド後に設定)
backend_image  = "asia-northeast1-docker.pkg.dev/your-project/call-quality-dashboard/backend:latest"
frontend_image = "asia-northeast1-docker.pkg.dev/your-project/call-quality-dashboard/frontend:latest"

# Secrets
secret_key           = "your-jwt-secret-key"
google_client_id     = "your-google-client-id"
google_client_secret = "your-google-client-secret"
openai_api_key       = "your-openai-api-key"
hume_api_key         = "your-hume-api-key"
anthropic_api_key    = "your-anthropic-api-key"

# Monitoring
notification_email = "alerts@your-domain.com"
